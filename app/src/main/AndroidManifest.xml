<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.brunodepaula.doceriafreitas">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DebugActivity" />
        <activity android:name=".Tela_inicial_Activity" android:theme="@style/AppTheme.Toolbar"/>
        <activity android:name=".TelaSecundariaActivity" />
        <activity android:name=".Configuracao_mainActivity"/>
        <activity android:name=".TelaCadastroActivity"/>
    </application>

</manifest>